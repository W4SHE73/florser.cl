  /* Main content */
.main-content {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 80vh;
    overflow: hidden;
    position: relative;
    flex-direction: column; /* Apilamos texto y dots */
}

.container-services {
    display: flex;
    width: 100%;
    transform: translateX(0);
    transition: transform 0.5s ease-in-out;
}

.service-item {
    min-width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 20px; /* Ajusta el espacio interno */
}

.circle {
    width: 150px;
    height: 150px;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.8);
    display: flex;
    justify-content: center;
    align-items: center;
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
    margin-bottom: 20px;
}

.circle img {
    max-width: 80%;
    height: auto;
}

.text {
    max-width: 600px; /* Ajusta el ancho del texto */
}

.text h2 {
    font-size: 24px;
    margin-bottom: 10px;
}

.text p {
    font-size: 16px;
    line-height: 1.6;
    text-align: center;
}

/* Footer (Pagination) */
footer {
    margin-top: 20px; /* Espaciado entre texto y dots */
}

footer .pagination {
    display: flex;
    justify-content: center;
    gap: 10px;
}

footer .dot {
    width: 15px;
    height: 15px;
    background-color: #ccc;
    border-radius: 50%;
    cursor: pointer;
    transition: background-color 0.3s;
}

footer .dot.active {
    background-color: #ff6600;
}
  </style>  
  
  <script> 
    let currentIndex: number = 0;
    const services: NodeListOf<Element> = document.querySelectorAll('.service-item');
    const paginationDots: NodeListOf<Element> = document.querySelectorAll('.dot');
    
    function showService(index: number): void {
        const container = document.getElementById('container-services');
        if (container) {
            container.style.transform = `translateX(-${index * 100}%)`;
        }
        paginationDots.forEach(dot => dot.classList.remove('active'));
        paginationDots[index].classList.add('active'); 
    }
    
    function moveToPage(index: number): void {
        currentIndex = index;
        showService(currentIndex);
    }
    
    function autoRotate(): void {
        currentIndex = (currentIndex + 1) % services.length;
        showService(currentIndex);
    }
    
    setInterval(autoRotate, 3000); 
  </script>  
  