---
import Header from "../../components/header.astro";
import Layout from "../../layouts/Layout.astro";
---
<Layout>
    <Header/> 
<!DOCTYPE html>
<html lang="es">  
<head>  
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contacto | Florser</title>       
    <style>    
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;    
        }
        body {
            font-family: Arial, sans-serif;
            background-color: whitesmoke;    
        }

        /* --- Cabecera --- */
        header {
            background-color: honeydew; 
            padding: 10px 50px;
            display: flex;
            justify-content: space-between;  
            align-items: center;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }
        .logo {
            display: flex;
            align-items: center;
        }
        .logo img {
            height: 50px;
            margin-right: 10px;      
        }
        nav ul {
            list-style: none;
            display: flex;
        }
        nav ul li {
            margin-left: 30px;
        }
        nav ul li a {
            text-decoration: none;
            color: black;
            font-weight: bold; 
            transition: color 0.3s; 
        }
        nav ul li a:hover {
            color:#801431;  
        }

        /* --- Contenedor principal --- */
        .contenedor-contacto {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 20px;
            padding: 40px 20px; 
        }
        
        /* --- Información de Contacto --- */
        .contacto-container {
            width: 40%;
            display: flex;
            flex-direction: column;  
            gap: 20px;
            align-items: center; 
        }
        .contacto-info {
            display: flex;
            align-items: center;   
            gap: 10px;
            text-align: left;     
        }
        .contacto-info img {     
            width: 40px;
        }
        .contacto-info .text {
            font-size: 18px;
            color:#801431;
            font-weight: bold;
        }
        .contacto-info a {
            text-decoration: none;
            color:#801431;   
        }

        /* --- Mapa con tamaño cuadrado --- */
        .mapa-container {
            width: 50%;
            max-width: 700px; /* Limita el ancho máximo del mapa */
            padding: 30px;
            border-radius: 10px;
            text-align: center;
            margin: 0 auto;
        }
        .mapa-container h2 {
            color: black;
            font-size: 20px;
            margin-bottom: 10px;  
        }
        iframe {
            width: 100%;   /* Ocupa el 100% del contenedor */
            height: 500px; /* Mapa cuadrado */
            border: none;
            border-radius: 10px;
            display: block;
        }

        /* --- Responsive para pantallas más pequeñas --- */
        @media (max-width: 768px) {
            .contenedor-contacto {
                flex-direction: column-reverse;
                text-align: center;
            }
            .mapa-container {
                width: 90%;
                padding: 20px;
            }
            iframe {
                height: 400px; /* Ajusta altura para móviles */
            }
            .contacto-container {
                width: 90%;
            }
        }
    </style>
</head>  
<body>

    <!-- Contenedor Principal -->
    <div class="contenedor-contacto">
        <!-- Información de Contacto -->
        <div class="contacto-container">
            <!-- Instagram -->
            <div class="contacto-info">
                <img src="https://upload.wikimedia.org/wikipedia/commons/9/95/Instagram_logo_2022.svg" alt="Instagram">
                <div class="text">
                 <a href="https://www.instagram.com/centroflorser/" target="_blank">@Centroflorser</a>
                </div>
            </div>

            <!-- WhatsApp -->
            <div class="contacto-info">
                <img src="https://upload.wikimedia.org/wikipedia/commons/6/6b/WhatsApp.svg" alt="WhatsApp">
                <div class="text">
                 <a href="https://wa.me/56987640509" target="_blank">+56987640509</a> 
                </div>
            </div>  
        </div>

        <!-- Mapa -->
        <div class="mapa-container">
            <h2>Ubicación</h2>
            <iframe 
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d6708.14612995968!2d-71.2129350399968!3d-32.79032188839992!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x9689cb5bec5a147b%3A0x4d01f0d5ebc1cc4d!2sMichimalongo%20526%2C%202290208%20La%20Calera%2C%20Calera%2C%20Valpara%C3%ADso!5e0!3m2!1ses-419!2scl!4v1705626457010!5m2!1ses-419!2scl" 
                allowfullscreen="" 
                loading="lazy" 
                referrerpolicy="no-referrer-when-downgrade">
            </iframe>
        </div>
    </div>
   
</Layout>   
</body>
</html>  
