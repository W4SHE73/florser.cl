---
import Header from "../../components/header.astro";
import Footer from "../../components/footer.astro";
import Layout from "../../layouts/Layout.astro";
---
<Layout>
    <Header/> 
    <section class="container py-5">
        <h2 class="text-center">
          Servicios <span class="text-danger">belleza</span>
        </h2>
        <hr class="mx-auto my-3" style="width: 80%; height: 2px; background-color: #800020;" />
    
        <div class="row align-items-center shadow p-4 rounded bg-white">
          <!-- Imagen -->
          <div class="col-md-6">
            <img 
              src="/public/spa facial.webp"
              alt="Limpieza" 
              class="img-fluid rounded"  
            />
          </div> 
    
          <!-- Contenido -->
          <div class="col-md-6">
            <h3 class="text-dark"><strong> Spa Facial </strong></h3> 
            <p>
                Limpieza profunda + expoliación con ácidos frutales + extracción de impurezas + masaje linfático descongestivo + mascara colágeno
            </p>
            <ul class="list-unstyled">
              <li><strong>Terapeuta:</strong> Nathaly <span class="text-danger">$30.000</span></li> 
            </ul>
          </div>
        </div> 

    <Footer/> 
</Layout>  