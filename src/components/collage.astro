<!-- Galería de fotos collage -->
<section class="photos"> 
    <article class="gallery">
        <div class="img img--a">
            <img src="/public/imagen1.png" alt="Imagen 1">  
        </div>
        <div class="img img--b">
            <img src="/public/imagen2.png" alt="Imagen 2">
        </div>
        <div class="img img--c">
            <img src="/public/imagen3.png" alt="Imagen 3">
        </div>
        <div class="img img--d">
            <img src="/public/imagen 4.png" alt="Imagen 4">
        </div>
        <div class="img img--e">
            <img src="/public/imagen5.png" alt="Imagen 5"> 
        </div>
        <div class="img img--f">
            <img src="/public/imagen6.png" alt="Imagen 6">
        </div>
    </article>     
</section>   

<!-- Estilos para la galería -->
<style>
    /* Meta tag para asegurar que la página sea responsiva */
    @media screen and (max-width: 480px) { 
        html { 
            font-size: 14px;  /* Ajusta el tamaño base de la fuente */
        }
    }

    /* Estilo para la galería */
    .photos {  
        margin-top: 60px; 
        padding: 0 20px;   /* Añadimos un poco de padding para centrado */
    } 

    .gallery {
        display: grid; 
        grid-template-columns: repeat(3, 1fr);   /* 3 columnas por defecto */
        grid-gap: 10px;  /* Espacio entre las imágenes */
        grid-template-areas: 
            "a b c"
            "d e f";  /* Áreas de las imágenes para organizar el collage */
        max-width: 90%;   /* Asegura que la galería no se sobrepase */
        margin-left: auto;   /* Centra la galería a la izquierda */
        margin-right: auto;  /* Centra la galería a la derecha */
    }

    /* Estilo para cada contenedor de imagen */
    .img {
        position: relative; 
        overflow: hidden; 
        border-radius: 10px;  /* Bordes redondeados para el collage */
        background-color: #f0f0f0;  /* Fondo suave para las imágenes */
        height: 250px; /* Ajustar la altura de las imágenes */
        border: 4px solid #ddd; /* Borde para las imágenes */
    }

    .img img {
        width: 100%;   /* Las imágenes ocuparán todo el espacio disponible */
        height: 100%;   /* Mantener la altura completa del contenedor */
        object-fit: cover;   /* Asegura que las imágenes se ajusten sin distorsión */
        transition: transform 0.3s ease;   /* Transición para el zoom */
    }

    .img:hover img {
        transform: scale(1.05);  /* Zoom al pasar el ratón sobre la imagen */
    }

    /* Diseño responsivo */
    @media (max-width: 1024px) { 
        .gallery {
            grid-template-columns: repeat(2, 1fr);   /* Dos columnas en pantallas más pequeñas */
            grid-template-areas:
                "a b"
                "c d"
                "e f"; /* Reorganiza las imágenes en 2 columnas */
        }
    }

    @media (max-width: 768px) {
        .gallery {
            grid-template-columns: repeat(2, 1fr);   /* Dos columnas en tabletas */
            grid-template-areas:
                "a b"
                "c d"
                "e f";  /* Reorganiza las imágenes */
        }
    }

    @media (max-width: 480px) {
        .gallery {
            grid-template-columns: 1fr;  /* Una sola columna en dispositivos móviles */
            grid-template-areas:
                "a"
                "b"
                "c"
                "d"
                "e"
                "f"; /* Coloca cada imagen en una fila */
        }

        .img {
            height: 200px; /* Reduce la altura en dispositivos móviles */
        }
    }

    /* Estilo para asegurar el tamaño responsivo */
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 0;
    }
</style> 

<!-- Meta tag para la compatibilidad con dispositivos móviles -->
<meta name="viewport" content="width=device-width, initial-scale=1.0">
